
  <% popular = Vote.popular %>
  <% popular.each do |vote| %>
   
    <p class="text-danger text-decoration-none px-5 fs-3 fw-bolder text-uppercase ">
      Most Voted Article: <%= vote.article.title %>
    </p>
    <%= image_tag vote.article.article_photo, class:"photo"%>
  <% end %>



<div class="cat-table bg-white p-5 ml-0">
<h1 class="text-danger">Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.user_id %></td>
        <td><%= category.articles.article_photo %></td>

        <td><%= link_to 'Show', category %></td>
        <td><%= link_to 'Edit', edit_category_path(category) %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="danger-link"></div>
<% Category.all.each do |cat| %>
  <%= link_to cat.name, articles_path(category: cat.name) %>  
<% end %>


<br>

<%= link_to 'New Category', new_category_path %>

<%= link_to 'New Article', new_article_path %>

</div>
