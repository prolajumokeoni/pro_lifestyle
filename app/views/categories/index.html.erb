
  <% popular = Vote.popular %>
  <% popular.each do |vote| %>
   
    <p class="text-danger text-decoration-none fs-3 fw-bolder text-uppercase px-2">
      Most Voted Article: <%= vote.article.title %>
    </p>
    <%= image_tag vote.article.article_photo, class:"photo"%>
  <% end %>


<% Category.all.each do |cat| %>
  <%= link_to cat.name, articles_path(category: cat.name) %>  
<% end %>


<h1>Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Display in navbar</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.display_in_navbar %></td>
        <td><%= category.user_id %></td>
        <td><%= link_to 'Show', category %></td>
        <td><%= link_to 'Edit', edit_category_path(category) %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

