<%= form_with(model: article) do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="a-form">
    <div class="field">
      <%= form.label :title, :required => true %>
      <%= form.text_field :title, :required => true %>
    </div>

    <div class="field">
      <%= form.label :image, :required => true %>      
      <%= form.file_field :article_photo, :required => true %>
    </div>

    <div class="field">
      <%= form.label :body, :required => true %>
      <%= form.text_area :body, :required => true %>
    </div>

    <div class="field">
      <%= form.label :category %>
    <%= form.collection_select :category_id, Category.order(:name), :id, :name %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>

  </div>
<% end %>
