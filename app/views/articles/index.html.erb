<p id="notice"><%= notice %></p>

<h1>Articles </h1>
     
  <div class="col-sm-4">

<div class="col">
  <% @articles.each do |article| %>
        <%= article.title %>
<div class="col">
    <div class="card">
      <div class="card-body">


       <% if article.article_photo.attached?%>
      <%= image_tag article.article_photo, width:"300", height:"300" %>
      <% end %>
        <h5 class="card-title"><%= article.body %>

        <%= article.category.name %>
        <%= article.user.email %>
        <%= link_to 'Show', article %>
        <%= link_to 'Edit', edit_article_path(article) %>
        </h5>
        
        
      </div>
    </div>
  </div>
 </div>
</div>

   <% end %>



<%= link_to 'New Category', new_category_path %>
